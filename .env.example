# ==========================================
# BREW Coffee Labs - Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anonymous_key_here

# ==========================================
# API CONFIGURATION
# ==========================================
# Cloudflare Worker API URL for upload functionality
EXPO_PUBLIC_API_URL=https://your-worker-name.your-subdomain.workers.dev

# Toggle between Supabase Edge Functions and local development
USE_SUPABASE_EDGE_FUNCTIONS_FOR_GEMINI=true

# ==========================================
# GOOGLE OAUTH CONFIGURATION
# ==========================================
# Google OAuth client ID for iOS URL scheme
GOOGLE_IOS_URL_SCHEME=com.googleusercontent.apps.YOUR_GOOGLE_CLIENT_ID

# ==========================================
# EXPO/EAS CONFIGURATION
# ==========================================
# Your EAS (Expo Application Services) project ID
EAS_PROJECT_ID=your-eas-project-id-here

# EAS Updates URL
EAS_UPDATES_URL=https://u.expo.dev/your-eas-project-id-here

# ==========================================
# AI/GEMINI CONFIGURATION (FOR LOCAL DEV)
# ==========================================
# Gemini API key for local development (when not using Supabase Edge Functions)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# OPTIONAL CONFIGURATION
# ==========================================
# OpenAI API key for Supabase Studio AI features (local development)
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# SUPABASE EDGE FUNCTION SECRETS
# ==========================================
# These should be set in your Supabase dashboard under Settings > Edge Functions > Secrets
# - GEMINI_RECIPE_API_KEY
# - GEMINI_VALIDATION_API_KEY

# ==========================================
# CLOUDFLARE WORKER SECRETS (wrangler.toml)
# ==========================================
# These should be set using wrangler secrets:
# - SUPABASE_URL
# - SUPABASE_KEY
